<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="1188.0px"
            android:layout_height="0.0px"
            android:layout_weight="3.0"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="3.0"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/onecard_query_main_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50.0px"
                    android:layout_marginTop="100.0px"
                    android:textColor="@color/white"
                    android:textSize="30.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/onecard_query_main_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100.0px"
                    android:text="@string/dao_ji_shi"
                    android:textColor="@color/white"
                    android:textSize="@dimen/serial_number_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/onecard_query_main_layout"
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_marginLeft="50.0px"
            android:layout_marginRight="50.0px"
            android:layout_weight="5.4"
            android:background="@drawable/blue_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0px"
                android:layout_weight="2.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="75.0px"
                    android:layout_height="75.0px"
                    android:background="@drawable/yikatong" />

                <TextView
                    android:id="@+id/onecard_query_main_text"
                    style="@style/blue_bg_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0px"
                    android:text="@string/queryonecard"
                    android:textColor="@color/blue_text"
                    android:textSize="@dimen/onecard_textsize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0px"
                android:layout_weight="3.0"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/onecard_query_main_count_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/money_insidecard_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/blue_bg_shadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|right"
                            android:text="@string/moneyinsidecard"
                            android:textColor="@color/blue_text"
                            android:textSize="@dimen/onecard_textsize"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/money_insidecard"
                            style="@style/blue_bg_shadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15.0px"
                            android:gravity="center|left"
                            android:textColor="@color/blue_text"
                            android:textSize="@dimen/onecard_textsize"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/blue_bg_shadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15.0px"
                            android:gravity="center"
                            android:text="@string/yuan"
                            android:textColor="@color/blue_text"
                            android:textSize="@dimen/onecard_textsize"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/money_recharge_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/blue_bg_shadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25.0px"
                            android:gravity="center|right"
                            android:text="@string/rebate_this"
                            android:textColor="@color/blue_text"
                            android:textSize="@dimen/onecard_textsize"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/money_recharge"
                            style="@style/blue_bg_shadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15.0px"
                            android:gravity="center|left"
                            android:textColor="@color/blue_text"
                            android:textSize="@dimen/onecard_textsize"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/blue_bg_shadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15.0px"
                            android:gravity="center"
                            android:text="@string/yuan"
                            android:textColor="@color/blue_text"
                            android:textSize="@dimen/onecard_textsize"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/INCOM_balence_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/blue_bg_shadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25.0px"
                            android:gravity="center|right"
                            android:text="@string/balance"
                            android:textColor="@color/blue_text"
                            android:textSize="@dimen/onecard_textsize"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/INCOM_balence"
                            style="@style/blue_bg_shadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15.0px"
                            android:gravity="center|left"
                            android:textColor="@color/blue_text"
                            android:textSize="@dimen/onecard_textsize"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/blue_bg_shadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15.0px"
                            android:gravity="center"
                            android:text="@string/yuan"
                            android:textColor="@color/blue_text"
                            android:textSize="@dimen/onecard_textsize"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/onecard_jifen_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25.0px"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/integrationText"
                        style="@style/blue_bg_shadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25.0px"
                        android:gravity="center|right"
                        android:text="@string/integration"
                        android:textColor="@color/blue_text"
                        android:textSize="@dimen/onecard_textsize"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/integration"
                        style="@style/blue_bg_shadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.0px"
                        android:gravity="center|left"
                        android:textColor="@color/blue_text"
                        android:textSize="@dimen/onecard_textsize"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/onecard_query_main_fail_info"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/onecard_query_main_fail_warningtext"
                        style="@style/blue_bg_shadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="25.0px"
                        android:gravity="center_horizontal"
                        android:text="@string/QRcode_info_fail_text"
                        android:textColor="@color/blue_text"
                        android:textSize="@dimen/onecard_textsize"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_weight="1.8"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="50.0px"
                android:layout_marginRight="50.0px"
                android:gravity="center|right">

                <Button
                    android:id="@+id/toload"
                    android:layout_width="145.0px"
                    android:layout_height="145.0px"
                    android:layout_marginLeft="5.0px"
                    android:background="@drawable/bluechongzhi_btn"
                    android:paddingTop="50.0px"
                    android:text="@string/toload"
                    android:textColor="@color/white"
                    android:textSize="@dimen/linear_right_button_textSize"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/scrape"
                    android:layout_width="145.0px"
                    android:layout_height="145.0px"
                    android:layout_marginLeft="5.0px"
                    android:background="@drawable/bluechongzhi_btn"
                    android:paddingTop="50.0px"
                    android:text="@string/scrape"
                    android:textColor="@color/white"
                    android:textSize="@dimen/linear_right_button_textSize"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/fastVolume"
                    android:layout_width="145.0px"
                    android:layout_height="145.0px"
                    android:layout_marginLeft="5.0px"
                    android:background="@drawable/bluechongzhi_btn"
                    android:paddingTop="50.0px"
                    android:text="@string/fastvolume"
                    android:textColor="@color/white"
                    android:textSize="@dimen/linear_right_button_textSize"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/rebind"
                    android:layout_width="145.0px"
                    android:layout_height="145.0px"
                    android:layout_marginLeft="15.0px"
                    android:background="@drawable/chongxinbangding_btn"
                    android:paddingTop="63.0px"
                    android:text="@string/rebind"
                    android:textColor="@color/white"
                    android:textSize="@dimen/linear_right_button_textSize"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/consumptionrecord"
                    android:layout_width="145.0px"
                    android:layout_height="145.0px"
                    android:background="@drawable/xiaofeijilu_btn"
                    android:paddingTop="63.0px"
                    android:text="@string/consumptionRecord"
                    android:textColor="@color/white"
                    android:textSize="@dimen/linear_right_button_textSize"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/rechargerecord"
                    android:layout_width="145.0px"
                    android:layout_height="145.0px"
                    android:background="@drawable/chongzhijilu_btn"
                    android:paddingTop="63.0px"
                    android:text="@string/rechargeRecord"
                    android:textColor="@color/white"
                    android:textSize="@dimen/linear_right_button_textSize"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/recharge"
                    android:layout_width="145.0px"
                    android:layout_height="145.0px"
                    android:background="@drawable/bluechongzhi_btn"
                    android:paddingTop="63.0px"
                    android:text="@string/recharge"
                    android:textColor="@color/white"
                    android:textSize="@dimen/linear_right_button_textSize"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/end"
                    android:layout_width="145.0px"
                    android:layout_height="145.0px"
                    android:background="@drawable/jieshu_btn_on"
                    android:paddingTop="63.0px"
                    android:text="@string/end"
                    android:textColor="@color/white"
                    android:textSize="@dimen/linear_right_button_textSize"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_weight="0.8"
            android:orientation="horizontal" />
    </LinearLayout>
</AbsoluteLayout>