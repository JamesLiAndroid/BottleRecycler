<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">

    <FrameLayout
        android:layout_width="910.0px"
        android:layout_height="650.0px"
        android:layout_marginLeft="78.0px"
        android:layout_marginTop="130.0px">

        <SurfaceView
            android:id="@+id/preview_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center" />

        <com.incomrecycle.prms.rvm.gui.camera.ViewfinderView
            android:id="@+id/viewfinder_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="65.0px"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingBottom="10.0dip"
                android:text="@string/ScannerQRcode"
                android:textColor="#ffd78816"
                android:textSize="20.0sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_camera_diy_circle"
            android:layout_width="475.0px"
            android:layout_height="475.0px"
            android:layout_marginLeft="185.0px"
            android:layout_marginTop="85.0px"
            android:background="@drawable/bar_code_center" />

        <ImageView
            android:id="@+id/iv_camera_diy"
            android:layout_width="500.0px"
            android:layout_height="500.0px"
            android:layout_marginLeft="195.0px"
            android:layout_marginTop="78.0px"
            android:background="@drawable/bar_code_round_grey"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/pg_camera_diy"
            style="@style/CustomProgressStyle"
            android:layout_width="470.0px"
            android:layout_height="480.0px"
            android:layout_marginLeft="185.0px"
            android:layout_marginTop="82.0px"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progressbar" />

        <ImageView
            android:id="@+id/iv_camera_diy_corner"
            android:layout_width="480.0px"
            android:layout_height="480.0px"
            android:layout_marginLeft="180.0px"
            android:layout_marginTop="78.0px"
            android:background="@drawable/bar_code_four_corner" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="25.0px"
        android:layout_x="780.0px"
        android:layout_y="130.0px"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/showNumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/linear_right_timeText_marginTop"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:textColor="@color/linear_right_timeText_textColor"
            android:textSize="@dimen/linear_right_timeText_textSize" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/right_layout_marginbottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/userName_login"
                android:layout_width="270.0px"
                android:layout_height="94.0px"
                android:layout_marginBottom="@dimen/linear_right_tableRow_marginBottom"
                android:layout_marginLeft="85.0px"
                android:layout_marginTop="850.0px"
                android:background="@drawable/rvm_btn"
                android:text="@string/password_login"
                android:textColor="@color/button_textColor"
                android:textSize="@dimen/linear_right_button_textSize" />

            <Button
                android:id="@+id/back"
                android:layout_width="270.0px"
                android:layout_height="94.0px"
                android:layout_marginLeft="85.0px"
                android:background="@drawable/rvm_btn"
                android:text="@string/end"
                android:textColor="@color/button_textColor"
                android:textSize="@dimen/linear_right_button_textSize" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>