<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="1170.0px"
        android:layout_height="390.0px"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60.0px">

            <TextView
                android:layout_width="260.0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/bottleLimitValue"
                android:textColor="#ffffffff"
                android:textSize="@dimen/start_put_textsize"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etBottleNumMax"
                android:layout_width="260.0px"
                android:layout_height="fill_parent"
                android:ems="10"
                android:imeOptions="flagNoExtractUi"
                android:inputType="number"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60.0px"
            android:layout_marginTop="10.0px">

            <TextView
                android:layout_width="260.0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/bottleAlarmValue"
                android:textColor="#ffffffff"
                android:textSize="@dimen/start_put_textsize"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etBottleNumAlarm"
                android:layout_width="260.0px"
                android:layout_height="fill_parent"
                android:ems="10"
                android:imeOptions="flagNoExtractUi"
                android:inputType="number"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0px"
            android:gravity="center">

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="260.0px"
                android:layout_height="130.0px"
                android:background="@drawable/tongdaoweihu_gaoji_btn_bg"
                android:text="@string/alarmConfirm"
                android:textColor="@color/button_textColor"
                android:textSize="@dimen/linear_right_button_textSize" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="260.0px"
                android:layout_height="130.0px"
                android:layout_marginLeft="10.0px"
                android:background="@drawable/tongdaoweihu_gaoji_btn_bg"
                android:text="@string/alarmCancel"
                android:textColor="@color/button_textColor"
                android:textSize="@dimen/linear_right_button_textSize" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>