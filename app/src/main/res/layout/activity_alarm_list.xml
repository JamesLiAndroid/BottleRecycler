<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alarmLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/warnDateTimeText"
            android:layout_width="0.0px"
            android:layout_height="30.0px"
            android:layout_weight="2.0"
            android:gravity="center"
            android:text="@string/warnDateTimeText"
            android:textColor="@color/white"
            android:textSize="20.0sp" />

        <TextView
            android:id="@+id/warnInfoText"
            android:layout_width="0.0px"
            android:layout_height="30.0px"
            android:layout_weight="6.0"
            android:gravity="center"
            android:text="@string/warnInfoText"
            android:textColor="@color/white"
            android:textSize="20.0sp" />

        <TextView
            android:id="@+id/warnOperText"
            android:layout_width="0.0px"
            android:layout_height="30.0px"
            android:layout_weight="2.0"
            android:gravity="center"
            android:text="@string/warnOperText"
            android:textColor="@color/white"
            android:textSize="20.0sp" />
    </LinearLayout>

    <com.incomrecycle.prms.rvm.gui.activity.channel.PullDownView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pull_down_alarm_list_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>