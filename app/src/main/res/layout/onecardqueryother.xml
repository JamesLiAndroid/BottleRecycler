<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conve_select_query"
    android:layout_width="fill_parent"
    android:layout_height="380.0px"
    android:layout_marginLeft="80.0px"
    android:layout_marginRight="80.0px"
    android:background="@color/blue"
    android:orientation="horizontal">

    <Button
        android:id="@+id/rebind"
        android:layout_width="150.0px"
        android:layout_height="150.0px"
        android:layout_marginLeft="220.0px"
        android:layout_marginTop="155.0px"
        android:background="@drawable/chongxinbangding_btn"
        android:paddingTop="50.0px"
        android:text="@string/rebind"
        android:textColor="@color/white"
        android:textSize="@dimen/linear_right_button_textSize"
        android:textStyle="bold"
        android:visibility="gone" />

    <Button
        android:id="@+id/consumptionrecord"
        android:layout_width="150.0px"
        android:layout_height="150.0px"
        android:layout_marginLeft="110.0px"
        android:layout_marginTop="150.0px"
        android:background="@drawable/xiaofeijilu_btn"
        android:paddingTop="50.0px"
        android:text="@string/consumptionRecord"
        android:textColor="@color/white"
        android:textSize="@dimen/linear_right_button_textSize"
        android:textStyle="bold" />

    <Button
        android:id="@+id/rechargerecord"
        android:layout_width="150.0px"
        android:layout_height="150.0px"
        android:layout_marginLeft="110.0px"
        android:layout_marginTop="150.0px"
        android:background="@drawable/chongzhijilu_btn"
        android:paddingTop="50.0px"
        android:text="@string/rechargeRecord"
        android:textColor="@color/white"
        android:textSize="@dimen/linear_right_button_textSize"
        android:textStyle="bold" />
</LinearLayout>