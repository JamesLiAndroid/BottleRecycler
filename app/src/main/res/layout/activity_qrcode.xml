<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="1235.0px"
            android:layout_height="0.0px"
            android:layout_weight="3.0"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="3.0"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/scan_qrcode_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="63.0px"
                    android:layout_marginTop="130.0px"
                    android:textColor="@color/white"
                    android:textSize="30.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/scan_qrcode_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130.0px"
                    android:text="@string/dao_ji_shi"
                    android:textColor="@color/white"
                    android:textSize="@dimen/serial_number_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/scan_qrcode_layout"
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_marginLeft="100.0px"
            android:layout_marginRight="100.0px"
            android:layout_weight="5.4"
            android:background="@drawable/blue_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_marginBottom="13.0px"
                android:layout_marginLeft="10.0px"
                android:layout_marginTop="5.0px"
                android:layout_weight="3.0"
                android:background="@drawable/h_bg"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.0px"
                    android:layout_weight="1.0"
                    android:gravity="bottom|center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity_qrcode_inputType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cardNum"
                        android:textColor="@color/white"
                        android:textSize="20.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.0px"
                    android:layout_weight="2.0"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0.0px"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="15.0px"
                        android:layout_marginLeft="8.0px"
                        android:layout_marginTop="5.0px"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/qrcode_login_button"
                            style="@style/blue_bg_shadow"
                            android:layout_width="150.0px"
                            android:layout_height="150.0px"
                            android:background="@drawable/erweimadenglu_icon_on"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="90.0px"
                            android:text="@string/QRcode"
                            android:textColor="@color/white"
                            android:textSize="20.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0px"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="15.0px"
                        android:layout_marginTop="5.0px"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/pwd_login_button"
                            style="@style/blue_bg_shadow"
                            android:layout_width="150.0px"
                            android:layout_height="150.0px"
                            android:background="@drawable/yonghumingdenglu_icon_off"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="90.0px"
                            android:text="@string/qrcode_number"
                            android:textColor="@color/white"
                            android:textSize="20.0sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_type_layout"
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_marginBottom="11.0px"
                android:layout_marginRight="10.0px"
                android:layout_marginTop="3.0px"
                android:layout_weight="5.0"
                android:gravity="center_horizontal"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_weight="1.8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/scan_qrcode_return_btn"
                android:layout_width="155.0px"
                android:layout_height="155.0px"
                android:layout_marginLeft="100.0px"
                android:background="@drawable/fanhui_btn"
                android:paddingTop="72.0px"
                android:text="@string/backBtn"
                android:textColor="@color/white"
                android:textSize="@dimen/linear_right_button_textSize"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="913.0px"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/scan_qrcode_remind_text"
                    android:layout_width="fill_parent"
                    android:layout_height="130.0px"
                    android:layout_marginTop="15.0px"
                    android:background="@drawable/black_bg"
                    android:gravity="center"
                    android:padding="10.0px"
                    android:text="@string/cardNum"
                    android:textSize="@dimen/remind_text_size"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/input_qrcode_num_remind_text"
                    android:layout_width="770.0px"
                    android:layout_height="130.0px"
                    android:background="@drawable/black_bg"
                    android:gravity="center"
                    android:padding="10.0px"
                    android:text="@string/cardNum"
                    android:textSize="@dimen/remind_text_size"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/scan_qrcode_confirm_btn"
                    android:layout_width="155.0px"
                    android:layout_height="155.0px"
                    android:layout_marginTop="5.0px"
                    android:background="@drawable/queding_btn"
                    android:paddingTop="72.0px"
                    android:text="@string/confirm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/linear_right_button_textSize"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_weight="0.5"
            android:orientation="horizontal" />
    </LinearLayout>
</LinearLayout>