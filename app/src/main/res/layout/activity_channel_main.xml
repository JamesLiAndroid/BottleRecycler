<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="1235.0px"
            android:layout_height="0.0px"
            android:layout_weight="3.0"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="3.0"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/channel_main_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50.0px"
                    android:layout_marginTop="100.0px"
                    android:textColor="@color/white"
                    android:textSize="30.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/channel_main_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100.0px"
                    android:text="@string/dao_ji_shi"
                    android:textColor="@color/white"
                    android:textSize="@dimen/serial_number_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/channel_main_layout"
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_marginBottom="14.0px"
            android:layout_marginLeft="80.0px"
            android:layout_marginRight="80.0px"
            android:layout_marginTop="5.0px"
            android:layout_weight="5.4"
            android:background="@drawable/h_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="2.0"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0.0px"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="15.0px"
                    android:layout_marginLeft="8.0px"
                    android:layout_marginTop="5.0px"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/blue_bg_shadow"
                        android:layout_width="300.0px"
                        android:layout_height="100.0px"
                        android:gravity="center"
                        android:text="@string/maintainGard"
                        android:textColor="@color/white"
                        android:textSize="40.0sp" />

                    <LinearLayout
                        android:id="@+id/bottle_num_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0px"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10.0px"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="20.0px"
                            android:layout_height="60.0px"
                            android:layout_marginLeft="8.0px"
                            android:background="@drawable/tongdaoweihu_ping" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/put_number"
                            android:textColor="@color/white"
                            android:textSize="20.0sp" />

                        <TextView
                            android:id="@+id/bottle_num_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="20.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/paper_weight_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0px"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10.0px"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="35.0px"
                            android:layout_height="30.0px"
                            android:background="@drawable/tongdaoweihu_zhi" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/put_weight"
                            android:textColor="@color/white"
                            android:textSize="20.0sp" />

                        <TextView
                            android:id="@+id/paper_weight_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="20.0sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/channel_main_text_layout"
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="3.0"
                android:background="#ff0c2053"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <GridView
                    android:id="@+id/gridview_show_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5.0px"
                    android:horizontalSpacing="10.0px"
                    android:numColumns="3"
                    android:verticalSpacing="10.0dip" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_marginLeft="75.0px"
            android:layout_marginRight="80.0px"
            android:layout_weight="1.8"
            android:orientation="horizontal">

            <Button
                android:id="@+id/channel_main_return_btn"
                android:layout_width="156.0px"
                android:layout_height="156.0px"
                android:background="@drawable/fanhui_btn"
                android:paddingTop="65.0px"
                android:text="@string/backBtn"
                android:textColor="@color/white"
                android:textSize="@dimen/linear_right_button_textSize"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/channel_main_remind_text"
                    android:layout_width="fill_parent"
                    android:layout_height="133.0px"
                    android:layout_marginTop="7.0px"
                    android:background="@drawable/black_bg"
                    android:gravity="center"
                    android:padding="10.0px"
                    android:text="@string/help_info"
                    android:textSize="@dimen/remind_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_weight="0.8"
            android:orientation="horizontal" />
    </LinearLayout>
</AbsoluteLayout>