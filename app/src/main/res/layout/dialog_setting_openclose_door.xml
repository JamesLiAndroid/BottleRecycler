<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="900.0px"
        android:layout_height="300.0px"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="300.0px"
            android:layout_height="300.0px"
            android:layout_marginLeft="30.0px"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/setWithoutDoor"
                android:layout_width="200.0px"
                android:layout_height="100.0px"
                android:background="@drawable/tongdaoweihu_gaoji_btn_bg"
                android:text="@string/setWithoutDoor"
                android:textColor="@color/button_textColor" />

            <Button
                android:id="@+id/setHasDoor"
                android:layout_width="200.0px"
                android:layout_height="100.0px"
                android:layout_marginTop="30.0px"
                android:background="@drawable/tongdaoweihu_gaoji_btn_bg"
                android:text="@string/setHasDoor"
                android:textColor="@color/button_textColor" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_toggle_OnOffDoors"
            android:layout_width="400.0px"
            android:layout_height="300.0px"
            android:layout_marginLeft="10.0px"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/OFF"
                android:textColor="@color/button_textColor"
                android:textSize="25.0sp" />

            <ToggleButton
                android:id="@+id/toggleButton_OnOffDoors"
                android:layout_width="200.0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0px"
                android:layout_marginRight="10.0px"
                android:background="@drawable/off"
                android:gravity="center|right"
                android:paddingLeft="14.0dip"
                android:paddingRight="14.0dip"
                android:textColor="@color/button_textColor"
                android:textOff=""
                android:textOn="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ON"
                android:textColor="@color/button_textColor"
                android:textSize="25.0sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>