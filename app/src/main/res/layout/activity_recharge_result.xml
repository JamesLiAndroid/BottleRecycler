<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="1235.0px"
            android:layout_height="0.0px"
            android:layout_weight="3.0"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="3.0"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/onecard_recharge_result_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="63.0px"
                    android:layout_marginTop="130.0px"
                    android:textColor="@color/white"
                    android:textSize="30.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/onecard_recharge_result_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130.0px"
                    android:text="@string/dao_ji_shi"
                    android:textColor="@color/white"
                    android:textSize="@dimen/serial_number_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/onecard_recharge_result_layout"
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_marginLeft="100.0px"
            android:layout_marginRight="100.0px"
            android:layout_weight="5.4"
            android:background="@drawable/blue_bg"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="3.0"
                android:gravity="center"
                android:orientation="vertical">

                <com.incomrecycle.prms.rvm.gui.activity.view.MyGifView
                    android:id="@+id/onecard_recharge_result_title"
                    res_id="@drawable/recharge_success"
                    android:layout_width="310.0px"
                    android:layout_height="310.0px" />

                <TextView
                    android:id="@+id/onecard_recharge_result_text"
                    style="@style/blue_bg_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0px"
                    android:text="@string/recharge_finish_text"
                    android:textColor="@color/blue_text"
                    android:textSize="@dimen/onecard_textsize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="5.0"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/onecard_recharge_result_success_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/blue_bg_shadow"
                            android:layout_width="188.0px"
                            android:layout_height="wrap_content"
                            android:gravity="center|right"
                            android:text="@string/recharged"
                            android:textColor="@color/blue_text"
                            android:textSize="20.0sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/recharged"
                            style="@style/blue_bg_shadow"
                            android:layout_width="125.0px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0px"
                            android:gravity="center|left"
                            android:textColor="@color/blue_text"
                            android:textSize="30.0sp" />

                        <TextView
                            style="@style/blue_bg_shadow"
                            android:layout_width="188.0px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0px"
                            android:text="@string/yuan"
                            android:textColor="@color/blue_text"
                            android:textSize="20.0sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/blue_bg_shadow"
                            android:layout_width="188.0px"
                            android:layout_height="wrap_content"
                            android:gravity="center|right"
                            android:text="@string/moneyinsidecard"
                            android:textColor="@color/blue_text"
                            android:textSize="20.0sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/money_insidecard"
                            style="@style/blue_bg_shadow"
                            android:layout_width="125.0px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0px"
                            android:gravity="center|left"
                            android:textColor="@color/blue_text"
                            android:textSize="30.0sp" />

                        <TextView
                            style="@style/blue_bg_shadow"
                            android:layout_width="188.0px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0px"
                            android:text="@string/yuan"
                            android:textColor="@color/blue_text"
                            android:textSize="20.0sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/blue_bg_shadow"
                            android:layout_width="188.0px"
                            android:layout_height="wrap_content"
                            android:gravity="center|right"
                            android:text="@string/Account_Income"
                            android:textColor="@color/blue_text"
                            android:textSize="20.0sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/card_number"
                            style="@style/blue_bg_shadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13.0px"
                            android:gravity="center|left"
                            android:textColor="@color/blue_text"
                            android:textSize="30.0sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/onecard_recharge_result_fail_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/onecard_recharge_result_fail_text"
                        style="@style/blue_bg_shadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20.0px"
                        android:gravity="center_vertical"
                        android:text="@string/recharge_fail_text"
                        android:textColor="@color/blue_text"
                        android:textSize="30.0sp" />

                    <TextView
                        android:id="@+id/failed_textView"
                        style="@style/blue_bg_shadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0px"
                        android:textColor="@color/wechat_red"
                        android:textSize="27.0sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_weight="1.8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="913.0px"
                android:layout_height="fill_parent"
                android:layout_marginLeft="110.0px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/onecard_recharge_result_remind_text"
                    android:layout_width="fill_parent"
                    android:layout_height="130.0px"
                    android:layout_marginTop="11.0px"
                    android:background="@drawable/black_bg"
                    android:gravity="center"
                    android:padding="10.0px"
                    android:text="@string/help_info"
                    android:textSize="@dimen/remind_text_size" />
            </LinearLayout>

            <Button
                android:id="@+id/onecard_recharge_result_end"
                android:layout_width="156.0px"
                android:layout_height="156.0px"
                android:background="@drawable/queding_btn"
                android:paddingTop="65.0px"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/linear_right_button_textSize"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_weight="0.8"
            android:orientation="horizontal" />
    </LinearLayout>
</AbsoluteLayout>