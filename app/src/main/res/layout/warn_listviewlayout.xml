<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/warn_listview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <View
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="#ffb8b8b8"
        android:visibility="visible" />

    <TextView
        android:id="@+id/warnDateTime"
        android:layout_width="0.0px"
        android:layout_height="fill_parent"
        android:layout_weight="2.0"
        android:background="#ff323232"
        android:gravity="center"
        android:textSize="17.0sp" />

    <View
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="#ffb8b8b8"
        android:visibility="visible" />

    <TextView
        android:id="@+id/warnInfo"
        android:layout_width="0.0px"
        android:layout_height="fill_parent"
        android:layout_weight="6.0"
        android:background="#ff323232"
        android:gravity="center"
        android:textSize="17.0sp" />

    <View
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="#ffb8b8b8"
        android:visibility="visible" />

    <Button
        android:id="@+id/warnOperButton"
        android:layout_width="0.0px"
        android:layout_height="fill_parent"
        android:layout_weight="2.0"
        android:gravity="center"
        android:text="@string/alarm_status_item_4"
        android:textColor="#ff000000"
        android:textSize="17.0sp" />

    <TextView
        android:id="@+id/warnOperText"
        android:layout_width="0.0px"
        android:layout_height="fill_parent"
        android:layout_weight="2.0"
        android:background="#ff323232"
        android:gravity="center"
        android:text="@string/alarm_status_item_4"
        android:textSize="17.0sp" />
</LinearLayout>