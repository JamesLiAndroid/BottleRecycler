<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="1188.0px"
            android:layout_height="0.0px"
            android:layout_weight="3.0"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="3.0"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/query_onecard_recharge_result_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50.0px"
                    android:layout_marginTop="100.0px"
                    android:textColor="@color/white"
                    android:textSize="30.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/query_onecard_recharge_result_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100.0px"
                    android:text="@string/dao_ji_shi"
                    android:textColor="@color/white"
                    android:textSize="@dimen/serial_number_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/query_onecard_recharge_result_layout"
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_marginLeft="80.0px"
            android:layout_marginRight="80.0px"
            android:layout_weight="5.4"
            android:background="@drawable/blue_bg"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="3.0"
                android:gravity="center"
                android:orientation="vertical">

                <com.incomrecycle.prms.rvm.gui.activity.view.MyGifView
                    android:id="@+id/query_onecard_recharge_result_title"
                    res_id="@drawable/incom_to_onecard"
                    android:layout_width="298.0px"
                    android:layout_height="298.0px" />

                <TextView
                    android:id="@+id/query_onecard_recharge_result_text"
                    style="@style/blue_bg_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13.0px"
                    android:text="@string/recharge_finish_text"
                    android:textColor="@color/blue_text"
                    android:textSize="@dimen/onecard_textsize" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/query_onecard_recharge_result_success_layout"
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="5.0"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/blue_bg_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:text="@string/recharged"
                    android:textColor="@color/blue_text"
                    android:textSize="35.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/query_onecard_recharged"
                    style="@style/blue_bg_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.0px"
                    android:gravity="center|left"
                    android:textColor="@color/blue_text"
                    android:textSize="30.0sp" />

                <TextView
                    style="@style/blue_bg_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.0px"
                    android:gravity="center"
                    android:text="@string/yuan"
                    android:textColor="@color/blue_text"
                    android:textSize="35.0sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/blue_bg_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25.0px"
                    android:gravity="center|right"
                    android:text="@string/card_in_total"
                    android:textColor="@color/blue_text"
                    android:textSize="35.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/query_onecard_money_insidecard"
                    style="@style/blue_bg_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.0px"
                    android:gravity="center|left"
                    android:textColor="@color/blue_text"
                    android:textSize="30.0sp" />

                <TextView
                    style="@style/blue_bg_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.0px"
                    android:gravity="center"
                    android:text="@string/yuan"
                    android:textColor="@color/blue_text"
                    android:textSize="35.0sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/query_onecard_recharge_result_fail_text"
                style="@style/blue_bg_shadow"
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_margin="25.0px"
                android:layout_weight="5.0"
                android:gravity="center_vertical"
                android:text="@string/convenienceservices_recharge_fail_text"
                android:textColor="@color/blue_text"
                android:textSize="20.0sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_weight="1.8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="955.0px"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7.0px"
                android:layout_marginLeft="90.0px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/query_onecard_recharge_result_remind_text"
                    android:layout_width="fill_parent"
                    android:layout_height="132.0px"
                    android:layout_marginTop="10.0px"
                    android:background="@drawable/black_bg"
                    android:gravity="center"
                    android:padding="13.0px"
                    android:text="@string/help_info"
                    android:textSize="@dimen/remind_text_size" />
            </LinearLayout>

            <Button
                android:id="@+id/query_onecard_recharge_result_end"
                android:layout_width="156.0px"
                android:layout_height="156.0px"
                android:background="@drawable/jieshu_btn_on"
                android:paddingTop="65.0px"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/linear_right_button_textSize"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_weight="0.8"
            android:orientation="horizontal" />
    </LinearLayout>
</AbsoluteLayout>