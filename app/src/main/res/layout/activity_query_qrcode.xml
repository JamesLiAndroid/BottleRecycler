<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="1188.0px"
            android:layout_height="0.0px"
            android:layout_weight="3.0"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="3.0"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/query_qrcode_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65.0px"
                    android:layout_marginTop="130.0px"
                    android:textColor="@color/white"
                    android:textSize="30.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/query_qrcode_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130.0px"
                    android:text="@string/dao_ji_shi"
                    android:textColor="@color/white"
                    android:textSize="@dimen/serial_number_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/query_qrcode_layout"
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_marginLeft="100.0px"
            android:layout_marginRight="100.0px"
            android:layout_weight="5.4"
            android:background="@drawable/blue_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_marginBottom="13.0px"
                android:layout_marginLeft="10.0px"
                android:layout_marginTop="5.0px"
                android:layout_weight="3.0"
                android:gravity="center"
                android:orientation="vertical">

                <com.incomrecycle.prms.rvm.gui.activity.view.MyGifView
                    android:id="@+id/query_qrcode_imageview"
                    res_id="@drawable/scanqrcode"
                    android:layout_width="320.0px"
                    android:layout_height="320.0px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_marginBottom="11.0px"
                android:layout_marginRight="10.0px"
                android:layout_marginTop="3.0px"
                android:layout_weight="5.0"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="15.0px"
                    android:layout_marginLeft="38.0px"
                    android:layout_marginRight="38.0px"
                    android:layout_marginTop="15.0px">

                    <SurfaceView
                        android:id="@+id/preview_view"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center" />

                    <com.incomrecycle.prms.rvm.gui.camera.ViewfinderView
                        android:id="@+id/viewfinder_view"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_camera_diy_circle"
                        android:layout_width="400.0px"
                        android:layout_height="400.0px"
                        android:layout_marginLeft="95.0px"
                        android:layout_marginTop="15.0px"
                        android:background="@drawable/bar_code_center" />

                    <ImageView
                        android:id="@+id/iv_camera_diy"
                        android:layout_width="390.0px"
                        android:layout_height="390.0px"
                        android:layout_marginLeft="100.0px"
                        android:layout_marginTop="15.0px"
                        android:background="@drawable/bar_code_round_grey"
                        android:visibility="invisible" />

                    <ProgressBar
                        android:id="@+id/pg_camera_diy"
                        style="@style/CustomProgressStyle"
                        android:layout_width="385.0px"
                        android:layout_height="385.0px"
                        android:layout_marginLeft="102.0px"
                        android:layout_marginTop="22.0px"
                        android:indeterminate="true"
                        android:indeterminateDrawable="@drawable/progressbar" />

                    <ImageView
                        android:id="@+id/iv_camera_diy_corner"
                        android:layout_width="412.0px"
                        android:layout_height="412.0px"
                        android:layout_marginLeft="90.0px"
                        android:layout_marginTop="5.0px"
                        android:background="@drawable/bar_code_four_corner" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_weight="1.8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/query_qrcode_return_btn"
                android:layout_width="156.0px"
                android:layout_height="156.0px"
                android:layout_marginLeft="100.0px"
                android:background="@drawable/fanhui_btn"
                android:paddingTop="65.0px"
                android:text="@string/backBtn"
                android:textColor="@color/white"
                android:textSize="@dimen/linear_right_button_textSize"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="925.0px"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/query_qrcode_remind_text"
                    android:layout_width="fill_parent"
                    android:layout_height="132.0px"
                    android:layout_marginTop="9.0px"
                    android:background="@drawable/black_bg"
                    android:gravity="center"
                    android:padding="10.0px"
                    android:text="@string/ScannerQRcode"
                    android:textSize="@dimen/remind_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_weight="0.8"
            android:orientation="horizontal" />
    </LinearLayout>
</LinearLayout>